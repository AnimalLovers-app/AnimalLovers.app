<h4>商品詳細</h4>

<table class="table">
  <thead class="table-bordered text-center">
    <%= image_tag @item.get_image(100,100) %>
    <tr>
      <td>商品名</td>
      <td><%= @item.name %></td>
    </tr>
    <tr>
      <td>商品説明</td>
      <td><%= @item.introduction %></td>
    </tr>
    <tr>
      <td>ジャンル</td>
      <td><%= @item.genre.name %></td>
    </tr>
    <tr>
      <td>税込価格<p>(税抜価格)</p></td>
      <td><%= (@item.price * 1.1).round %> (<%= @item.price %>) 円</td>
    </tr>
    <tr>
      <td>販売ステータス</td>
      <td><%= @item.is_active %></td>
    </tr>
  </tbody>
</table>