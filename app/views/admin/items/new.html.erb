<div class = "row" >
  <div class = "col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto" >
    <h4>商品新規登録</h4>
    <table class="table">
      <%= form_with model: [@admin, @item], url: admin_items_path, local: true do |f| %>
        <tr>
          <td>商品画像</td>
          <td><%= f.file_field :item_image, accept: "image/*" %></td>
        </tr>
        <tr>
          <td>商品名</td>
          <td><%= f.text_field :name %></td>
        </tr>
        <tr>
          <td>商品説明</td>
          <td><%= f.text_area :introduction %></td>
        </tr>
        <tr>
          <td>税抜価格</td>
          <td></td>
        </tr>
        <tr>
          <td>販売ステータス</td>
          <td>
            <%= f.radio_buttom :packing, "ture" %>販売中
            <%= f.radio_buttom :packing, "false" %>販売停止中
          </td>
        </tr>
        <tr>
          <td><%= f.submit '新規登録' %></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>