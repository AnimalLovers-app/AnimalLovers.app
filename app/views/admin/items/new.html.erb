<div class="container">
  <div class = "row" >
    <div class = "col" >
      <h4 class="float-left font-weight-bold bg-light px-3 my-3">商品新規登録</h4>
    </div>
  </div>
  <div class = "row">
    <div class = "offset-2 float-center col-8">
      <%= form_with model: [@admin, @item], url: admin_items_path, local: true do |f| %>
      <table class="table table-borderless">
          <tr>
            <th>商品画像</th>
            <td><%= f.file_field :image, accept: "image/*" %></td>
          </tr>
          <tr>
            <th>商品名</th>
            <td><%= f.text_field :name %></td>
          </tr>
          <tr>
            <th>商品説明</th>
            <td><%= f.text_area :introduction %></td>
          </tr>
          <tr>
            <th><%= f.label :genre_id, "ジャンル" %></th>
            <td>
              <%= f.collection_select :genre_id, Genre.all, :id, :name, prompt: "--選択してください--" %>
            </td>
          </tr>
          <tr>
            <th>税抜価格</th>
            <td><%= f.text_field :price %>円</td>
          </tr>
            <tr>
            <th><%= f.label :is_active, "販売ステータス" %></th>
            <td>
              <div class="field">
                <%= f.radio_button :is_active, "true" %>販売中
                <%= f.radio_button :is_active, "false" %>販売停止中
              </div>
            </td>
          </tr>
          <tr>
            <td class=><%= f.submit '新規登録', class: 'btn btn-success rounded px-4 my-4' %></td>
          </tr>
        </table>
      <% end %>
    </div>
  </div>
</div>