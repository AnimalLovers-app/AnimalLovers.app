<div class="container px-5 px-sm-0">
  <div id="error_explanation">
    <%= render 'layouts/errors', obj: @genre %>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col">
      <h5 class="float-left font-weight-bold bg-light px-3 my-3">ジャンル一覧・追加</h5>
    </div>
  </div>
  <%= form_with model: @genre, url: admin_genres_path, local: true do |f| %>
  <div class="row form-group my-5">
    <label for="inputName" class="col-2 col-form-label ">ジャンル名</label>
    <div class="col-3">
      <%= f.text_field :name, class: "form-control ", id: "inputName", placeholder: "ジャンル名" %>
    </div>
    <div class="col-2">
      <%= f.submit "新規登録", class:"btn btn-block btn-success w-75" %>
    </div>
  </div>
  <% end %>
  <div class="row">
    <div class="col-5">
      <table class="table">
        <thead class="table-bordered text-center">
          <tr>
            <th>ジャンル</th>
            <th></th>
          </tr>
        </thead>
        <tbody class="table-bordered">
          <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td><%= link_to "編集する", edit_admin_genre_path(genre), class: "btn btn-block btn-success w-50 mx-auto" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>