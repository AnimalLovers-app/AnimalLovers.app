<div class="container">
  <div class="row">
    <div class="col">
      <h5 class="float-left font-weight-bold bg-light px-3 my-3">ジャンル編集</h5>
    </div>
  </div>
  <%= form_with model: @genre, url: admin_genre_path, local: true do |f| %>
  <div class="row form-group my-5">
    <label for="inputName" class="col-2 col-form-label ">ジャンル名</label>
    <div class="col-3">
      <%= f.text_field :name, class: "form-control ", id: "inputName", placeholder: "ジャンル名" %>
    </div>
    <div class="col-2">
      <%= f.submit "変更を保存", class:"btn btn-block btn-success w-75" %>
    </div>
  </div>
  <% end %>
</div>