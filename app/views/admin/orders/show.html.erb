<div class="container">
  <div class="row py-2">
    <div class="col">
      <h5 class="float-left font-weight-bold bg-light px-3 my-3">注文履歴詳細</h5>
    </div>
  </div>
  
  <div class="row">
    <div class='col-11 offset-1'>
      <table class="table table-borderless">
        <tr>
          <th class="col-1">購入者</th>
          <td class="col-10"><%= @order.customer.name %></td>
        </tr>
        <tr>
          <th class="col-1">注文日</th>
          <td class="col-10"><%= @order.created_at.strftime('%Y/%m/%d') %></td>
        </tr>
        <tr>
          <th class="col-1">支払方法</th>
          <td class="col-10"><%= @order.payment_method_i18n %></td>
        </tr>
        <tr>
          <th class="col-1">支払方法</th>
          <td class="col-10"><%= @order.payment_method_i18n %></td>
        </tr>
        <tr>
          <th class="col-1">お届け先</th>
          <td class="col-10">
          〒<%= @order.postal_code %>
          <%= @order.address %><br>
          <%= @order.name %>
          </td>
        </tr>
      </table>
    </div>
  </div>
  
  
  
  
  <div class="row">
    <div class="col-7 offset-1">
      <table class='table table-bordered border-dark'>
        <tr class="table-secondary">
          <th>商品名</th>
          <th>単価(税込)</th>
          <th>数量</th>
          <th>小計</th>
        </tr>
        <% @cart_items.each do |cart_item| %>
          <tr>
            <td>
              <%= image_tag cart_item.item.get_image(50,50); %>
              <%= cart_item.item.name %>
            </td>
            <td><%= cart_item.item.with_tax_price%></td>
            <td><%= cart_item.amount %></td>
            <td>
              <%= cart_item.subtotal%>
            </td>
          </tr>
          <% @total = @total + cart_item.subtotal %>
          <% end %>
      </table>
    </div>
    <div class='col-3'>
      <table class="table table-bordered border-dark">
        <tr>
          <th class="table-secondary">送料</th>
          <td><%= @order.shipping_cost %></td>
        </tr>
        <tr>
          <th class="table-secondary">商品合計</th>
          <td><%= @total %></td>
        </tr>
        <tr>
          <th class="table-secondary">請求金額</th>
          <td><%= @order.total_payment = @total + @order.shipping_cost %></td>
        </tr>
      </table>
    </div>
  </div>
  
  
  <div class="row justify-content-center">
    <%= form_with model: @order, url: orders_path, method: :post, local: true do |f| %>
      <%= f.hidden_field :customer_id %>
      <%= f.hidden_field :shipping_cost %>
      <%= f.hidden_field :total_payment %>
      <%= f.hidden_field :payment_method %>
      <%= f.hidden_field :name %>
      <%= f.hidden_field :address %>
      <%= f.hidden_field :postal_code %>
      <%= f.hidden_field :status %>
      <%= f.submit "注文を確定する", class: "btn btn-success" %>
    <% end %>
  </div>
  
</div>