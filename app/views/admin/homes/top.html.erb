<div class="container">
  <div class="row">

    <div class="col-11 mx-auto">
      <h4 class="col-3 mt-3 text-center bg-light font-weight-bold">注文履歴一覧</h4>

      <div class="mt-3">
        <!--注文履歴一覧テーブル-->
        <table class="table table-bordereless">
          <thead class="thead-light">
            <tr>
              <th>購入日時</th>
              <th>購入者</th>
              <th>注文個数</th>
              <th>注文ステータス</th>
            </tr>
          </thead>
          <tbody>
            <% @orders.each do |order| %>
              <tr>
                <td class="col-4">
                  <%= link_to admin_root_path, class: "text-dark" do %><!--注文履歴詳細ができたらURL変更！-->
                    <%= l order.created_at %>
                  <% end %>
                </td>
                <td class="col-4"><%= order.customer.family_name + order.customer.first_name %></td>
                <td  class="col-2"><%= order.sum_of_amount %></td>
                <td class="col-2">
                  <% if order.status == 0 %>
                    入金待ち
                  <% elsif order.status == 1 %>
                    入金確認
                  <% elsif order.status == 2 %>
                    製作中
                  <% elsif order.status == 3 %>
                    発送準備中
                  <% else order.status == 4 %>
                    発送済み
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <!--ページネーション-->
      <div class="row mx-auto text-center">
          <span class="mx-auto text-center"><%= paginate @orders %></span>
      </div>

    </div><!--col-->

  </div><!--row-->

</div><!--container-->