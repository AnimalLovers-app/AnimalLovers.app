<div class="container">
  <div class = "row" >
    <div class = "col" >
      <h4 class="float-left font-weight-bold bg-light px-3 my-3">注文履歴詳細</h4>
    </div>
  </div>
  <table class="table">
    <thead class="table-bordered text-left bg-light">
      <tr>
        <th>id</th>
        <th>order_id</th>
        <th>item_id</th>
        <th>price</th>
        <th>amount</th>
        <th>making_status</th>
        <th></th>
        <th>name</th>
      </tr>
    </thead>
    <tbody class="table-bordered text-left">
      <% @order_details.each do |order_detail| %>
      <tr>
        <td><%= order_detail.id %></td>
        <td><%= order_detail.order_id %></td>
        <td><%= order_detail.item_id %></td>
        <td><%= order_detail.price %></td>
        <td><%= order_detail.amount %></td>
        <td><%= order_detail.making_status %></td>
        <td></td>
        <td><%= order_detail.item.name %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>