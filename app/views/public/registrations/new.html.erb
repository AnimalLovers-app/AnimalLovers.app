<div class="container">
  <div class="row">
    <div class="col">
      <h4 class="my-5 ">新規会員登録</h4>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      　　<table class="table table-borderless">
            <tr>
              <td>氏名</td>
              <td><%= f.label :"(姓)"%> <%= f.text_field :family_name, autofocus: true %></td>
              <td><%= f.label :"(名)" %> <%= f.text_field :first_name %></td>
            </tr>

            <tr>
              <td>フリガナ</td>
              <td><%= f.label :"(セイ)" %> <%= f.text_field :family_name_kana %></td>
              <td><%= f.label :"(メイ)" %> <%= f.text_field :first_name_kana %></td>
            </tr>

            <tr>
              <td>メールアドレス</td>
              <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
            </tr>

            <tr>
              <td>郵便番号(ハイフンなし)</td>
              <td><%= f.text_field :postal_code %></td>
            </tr>

            <tr>
              <td>住所</td>
            　<td><%= f.text_field :address %></td>
            </tr>

            <tr>
              <td>電話番号</td>
              <td><%= f.text_field :telephone_number %></td>
            </tr>

            <tr>
              <td><%= f.label :"パスワード" %>
                <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> "文字以上")</em>
                <% end %><br />
               <td><%= f.password_field :password, autocomplete: "new-password" %></td>
            </tr>

            <tr>
              <td>パスワード(確認用)</td>
              <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
            </tr>

             <tr>
               <td><%= f.submit "新規登録" , class: "btn btn-success" %></td>
            </tr>
            </table>
           <% end %>
      </div>
    </div>

    <div>
      <class="my-5">すでに登録済みの方</p>
    </div>

    <div>
      <%= link_to "こちら" , new_customer_session_path %> からログインしてください
    </div>
 </div>
