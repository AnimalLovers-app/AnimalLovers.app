<div class="container">
  <div class="row">
    <div class="col">
      <h4 class="col-2 my-5 bg-light ">新規会員登録</h4>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
         <%= render "public/shared/error_messages", resource: resource %>

      　　<table class="table table-borderless">
            <tr>
              <td>氏名</td>
              <td class="text-right"><%= f.label :"(姓)" %></td>
              <td><%= f.text_field :family_name, placeholder: '令和', autofocus: true%></td>
              <td><%= f.label :"(名)" %> </td>
              <td> <%= f.text_field :first_name, placeholder: '道子' %></td>
            </tr>
            <tr>
              <td>フリガナ</td>
              <td class="text-right"><%= f.label :"(セイ)" %></td>
              <td><%= f.text_field :family_name_kana, placeholder: 'レイワ'%></td>
              <td><%= f.label :"(メイ)" %></td>
              <td><%= f.text_field :first_name_kana, placeholder: 'ミチコ' %></td>
            </tr>

            <tr>
              <td>メールアドレス</td>
              <td></td>
              <td><%= f.email_field :email, autofocus: true, placeholder: 'sample@example.com', autocomplete: "email" %></td>
            </tr>

            <tr>
              <td>郵便番号(ハイフンなし)</td>
              <td></td>
              <td><%= f.text_field :postal_code, placeholder: '000000' %></td>
            </tr>

            <tr>
              <td>住所</td>
              <td></td>
            　<td><%= f.text_field :address, size: "40x20", placeholder: '東京都渋谷区代々木神園町0-0'%></td>
            </tr>

            <tr>
              <td>電話番号</td>
              <td></td>
              <td><%= f.text_field :telephone_number,placeholder: '00000000000' %></td>
            </tr>

            <tr>
              <td><%= f.label :"パスワード" %>
                <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> "文字以上")</em>
                <% end %><br />
              <td></td>
              <td><%= f.password_field :password, autocomplete: "new-password" %></td>
            </tr>

            <tr>
              <td>パスワード(確認用)</td>
              <td></td>
              <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
            </tr>

             <tr>
               <td></td>
               <td></td>
               <td><%= f.submit "新規登録" , class: "btn btn-success" %></td>
            </tr>
            </table>
           <% end %>
      </div>
    </div>
    <div>
      <class="my-5">すでに登録済みの方</p>
    </div>
    <div>
      <%= link_to "こちら" , new_customer_session_path %> からログインしてください
    </div>
 </div>
