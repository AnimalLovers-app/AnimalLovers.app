<div class="container">
  <div class="row">

    <div class="col-lg-9">

      <%= render 'layouts/errors', obj: @address %>

      <h4 class="col-4 mt-3 bg-light text-center">配送先登録/一覧</h4>
      <!--配送先登録-->
      <div class="mt-4">
        <%= form_with model:@address, local:true do |f| %>
          <!--郵便番号入力-->
            <div class="row form-group">
              <div class="col-lg-3"><%= f.label :postal_code, '郵便番号(ハイフンなし)' %></div>
              <div class="col-lg-4"><%= f.text_field :postal_code, class: 'form-control', placeholder: '0000000' %></div>
            </div>
            <!--住所入力-->
            <div class="row form-group">
              <div class="col-lg-3"><%= f.label :address, '住所' %></div>
              <div class="col-lg-8"><%= f.text_field :address, class: 'form-control', placeholder: '東京都渋谷区代々木神園町0-0' %></div>
            </div>
            <!--宛名入力-->
            <div class="row form-group">
              <div class="col-lg-3"><%= f.label :name, '宛名' %></div>
              <div class="col-lg-4"><%= f.text_field :name, class: 'form-control', placeholder: '令和道子' %></div>

              <!--新規登録ボタン-->
              <div class="col-lg-5"><%= f.submit '新規登録', class: 'btn btn-success' %></div>
            </div>
        <% end %>
      </div>

      <!--配送先一覧-->
      <div class="mt-5">
        <table class="table table-bordered">
          <!--テーブルヘッダー-->
          <thead>
            <tr class="table-active">
              <th class="col-2">郵便番号</th>
              <th class="col-3">住所</th>
              <th class="col-4">宛名</th>
              <th class="col-3"></th><!--編集・削除ボタンのところ-->
            </tr>
          </thead>
          <!--ここから一覧-->
          <tbody>
            <% @addresses.each do |addresses| %>
              <tr>
                <!--郵便番号-->
                <td><%= addresses.postal_code %></td>
                <!--住所-->
                <td><%= addresses.address %></td>
                <!--宛名-->
                <td><%= addresses.name %></td>
                <!--編集・削除ボタン-->
                <td>
                  <%= link_to '編集する', edit_address_path(addresses), class: "btn btn-sm btn-success" %>
                  <%= link_to '削除する', address_path(addresses), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

    </div><!--col-->

  </div><!--row-->
</div><!--container-->
