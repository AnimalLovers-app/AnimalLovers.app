<div class="container">
  <div class="row">

    <div class="col-lg-9">

      <h2>配送先登録/一覧</h2>
      <!--配送先登録-->
      <div>
        <%= form_with model:@address, local:true do |f| %>
          <!--郵便番号入力-->
          <div class="form-group">
            <%= f.label :postal_code, '郵便番号(ハイフンなし)' %>
            <%= f.text_field :postal_code, class: 'form-control' %>
          </div>
          <!--住所入力-->
          <div class="form-group">
            <%= f.label :address, '住所' %>
            <%= f.text_field :address, class: 'form-control' %>
          </div>
          <!--宛名入力-->
          <div class="form-group">
            <%= f.label :name, '宛名' %>
            <%= f.text_field :name, class: 'form-control' %>
          </div>
          <!--新規登録ボタン-->
          <div class="form-group">
            <%= f.submit '新規登録', class: 'btn btn-success' %>
          </div>
        <% end %>
      </div>

      <!--配送先一覧-->
      <div>
        <table>
          <!--テーブルヘッダー-->
          <thead>
            <tr>
              <th>郵便番号</th>
              <th>住所</th>
              <th>宛名</th>
              <th></th><!--編集・削除ボタンのところ-->
            </tr>
          </thead>
          <!--ここから一覧-->
          <tbody>
            <% @addresses.each do |addresses| %>
              <tr>
                <!--郵便番号-->
                <td><%= addresses.postal_code %></td>
                <!--住所-->
                <td><%= addresses.address %></td>
                <!--宛名-->
                <td><%= addresses.name %></td>
                <!--編集・削除ボタン-->
                <td>
                  <%= link_to '編集する', edit_address_path(addresses), class: "btn btn-sm btn-success" %>
                  <%= link_to '削除する', address_path(addresses), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

    </div><!--col-->

  </div><!--row-->
</div><!--container-->